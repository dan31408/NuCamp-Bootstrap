body {
    font-family: "Open Sans", sans-serif;
    background-color: #ccccff;
}

h1, h2, h3 {
    font-family: "Lobster", cursive;
    color: #000019;
}

h2 {
    color: #3232ff;
}

header h2 {
    color: #CEC8FF;
}

.site-footer {
    background-image: linear-gradient(#CEC8FF, white);
    padding: 20px 0;
}

.jumbotron {
    margin: 0;
    padding: 30px;
    background-image: linear-gradient(to right, #000066, #3046C5, #000066);
    color: white;
}

.row-content {
    padding: 50px 0;
    border-bottom: 1px ridge;
    min-height: 200px;
}

.navbar{
    background-color: #000019;
}

.modal-content {
    color: black;
}

.carousel-caption {
    background-color: rgba(0, 0, 0, 0.5);
}

.carousel {
    border: solid #000019;
}

.carousel-caption p {
    color: #ccccff;
}

p {
    color: #000066;
}

#carouselButton {
    position: absolute;
    right: 0;
    bottom: 0;
    z-index: 1;
}
#carouselH3 {
    color: #ccccff;
}